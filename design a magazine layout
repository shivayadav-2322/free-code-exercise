  display: grid;
  grid-template-areas: 
    "title title title"
    "feature-article feature-article cover-image"
    "small-article1 small-article2 cover-image";
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: auto 1fr 1fr;
  gap: 10px; /* fixed */
  width: 90vw;
  margin: 20px auto;
}

/* Title */
.title {
  grid-area: title;
  background: lightcoral;
  padding: 20px;
  text-align: center;
  font-size: 2rem;
  color: white;
}

