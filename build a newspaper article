** start of styles.css **

/* Root font size */
html {
  font-size: 24px;
}

/* Newspaper container */
.newspaper {
  font-size: 16px;
  font-family: 'Open Sans', sans-serif;
  margin: 20px auto;
  max-width: 800px;
}

/* Newspaper name */
.name {
  font-size: 2rem;
  font-family: "Times New Roman", serif;
  text-transform: uppercase;
}

/* Date */
.date {
  margin-bottom: 10px;
  font-size: 1em; /* inherits 16px from .newspaper */
}

/* Headline */
.headline {
  font-size: 2em;
  font-weight: bold;
  margin: 10px 0;
}

/* Sub-headline */
.sub-headline {
  font-weight: 100;
  font-size: 1.5em;
  font-style: italic;
  margin-bottom: 15px;
}

/* Author */
.author {
  text-transform: uppercase;
  font-weight: bold;
  margin-bottom: 20px;
}

/* Text paragraphs */
.text {
  text-indent: 20px;
  line-height: 2em;
  margin-bottom: 15px;
}

/* First letter styling */
.text::first-letter {
  font-weight: bold;
  font-size: 2em;
}


** end of styles.css **

