** start of styles.css **

/* Body styling */
body {
    background-color: #f4f4f4;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
}

/* Container for color boxes */
.color-grid {
    display: flex;
    gap: 20px; /* space between boxes */
}

/* Common styling for all color boxes */
.color-box {
    width: 100px;
    height: 100px;
    border: 2px solid #ccc;
}

/* Individual color boxes with different color formats */
.color1 {
    background-color: #ff5733; /* Hexadecimal */
}

.color2 {
    background-color: rgb(60, 179, 113); /* RGB */
}

.color3 {
    background-color: teal; /* Predefined color name */
}

.color4 {
    background-color: hsl(200, 70%, 50%); /* HSL */
}

.color5 {
    background-color: #ffd700; /* Any color (here, Hex for gold) */
}


** end of styles.css **

