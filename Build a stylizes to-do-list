** start of styles.css **

/* Remove default link styling */
.sub-item-link {
  text-decoration: none;
  color: teal; /* default color */
  transition: color 0.2s ease, outline 0.2s ease;
}

/* Visited link */
.sub-item-link:visited {
  color: purple;
}

/* Hover effect */
.sub-item-link:hover {
  color: orange;
}

/* Focus outline */
.sub-item-link:focus {
  outline: 2px solid blue;
  outline-offset: 3px;
}

/* Active (clicked) link */
.sub-item-link:active {
  color: red;
}


** end of styles.css **

