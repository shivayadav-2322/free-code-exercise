** start of styles.css **

/* Body styling */
body {
  padding: 50px 0;
  margin: 0 auto; /* top/bottom = 0, left/right = auto for centering */
  width: 80vw; /* relative to viewport width */
  min-height: calc(100vh - 100px); /* full viewport height minus top+bottom padding (50px + 50px) */
  font-family: Arial, sans-serif;
  text-align: center;
}

/* Header */
header img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
}

